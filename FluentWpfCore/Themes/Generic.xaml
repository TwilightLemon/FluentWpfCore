<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 默认主题颜色定义 / Default theme color definitions -->
    <!-- 用户可以在应用程序级别覆盖这些资源以自定义颜色 / Users can override these resources at the application level to customize colors -->

    <!-- 强调色 - 默认蓝色 / Accent color - default blue -->
    <SolidColorBrush x:Key="AccentColor" Color="#69F" />

    <!-- 遮罩颜色 - 默认半透明黑色用于悬停效果 / Mask color - default semi-transparent black for hover effects -->
    <SolidColorBrush x:Key="MaskColor" Color="#0C000000" />

    <!-- 弹出窗口背景色 - 默认白色 / Popup window background color - default white -->
    <SolidColorBrush x:Key="PopupBackgroundColor" Color="#6CFFFFFF" />

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/FluentWpfCore;component/Styles/ContextMenuResources.xaml" />
    </ResourceDictionary.MergedDictionaries>

</ResourceDictionary>
